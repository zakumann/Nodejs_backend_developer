<h1>{{title}}</h1>

<input type="text" name="search" id="search" value="{{search}}" size="50" placeholder="submit keyword" />
<button onclick="location.href=`/?serach=${document.getElementById('search').value}`">Search</button>
<br />

<a href="/write">Write</a>
<br />

<div>
    <table>
        <thead>
            <tr>
                <th width="50%">Subject</th>
                <th>Writer</th>
                <th>Total</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td><a href="/detail/{{_id}}">{{title}}</a></td>
                <td>{{writer}}</td>
                <td>{{hits}}</td>
                <td>{{dateString createdDt}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div>
  {{#with paginator}}
  <a href="/?page=1&search={{@root.search}}">&lt;&lt;</a>
  {{#if hasPrev}}
  <a href="/?page={{prevPage}}&search={{@root.search}}">&lt;</a>
  {{else}}
  <a>&lt;</a>
  {{/if}}
  {{#each pageList}}
  {{#if (eq . @root.paginator.page)}}
  <a>{{.}}</a>
  {{else}}
  <a href="/?page={{.}}&search={{@root.search}}">{{.}}</a>
  {{/if}}
  {{/each}}
  {{#if hasNext}}
  <a href="/?page={{nextPage}}&search={{@root.search}}">&gt;</a>
  {{else}}
  <a>&gt;</a>
  {{/if}}
  <a href="/?page={{lastPage}}&search={{@root.search}}">&gt;&gt;</a>
  {{/with}}
</div>